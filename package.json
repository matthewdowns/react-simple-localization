{
  "name": "@react-translate/core",
  "version": "3.3.4",
  "description": "The core library for React Translate.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint -c .eslintrc.json ./src/**/*",
    "lint:fix": "eslint -c .eslintrc.json ./src/**/* --fix",
    "prebuild": "rimraf lib dist",
    "build": "npm run build:tsc && npm run build:rollup",
    "build:tsc": "tsc -p ./tsconfig.json",
    "build:rollup": "rollup -c ./rollup.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-translate/core.git"
  },
  "keywords": [
    "languages",
    "localization",
    "react",
    "translate"
  ],
  "author": "Matthew Downs",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/react-translate/core/issues"
  },
  "homepage": "https://github.com/react-translate/core#readme",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-plugin-react": "^7.20.6",
    "jest": "^26.4.2",
    "moment": "^2.27.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.5",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-license": "^2.2.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  }
}

{
  "name": "@matthewdowns/react-translate",
  "version": "1.0.1",
  "description": "A simple component that handles language translations using the React context API.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prebuild": "rimraf lib dist",
    "build": "npm run build:tsc && npm run build:rollup",
    "build:tsc": "tsc -p ./tsconfig.json",
    "build:rollup": "rollup -c ./rollup.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthewdowns/react-translate.git"
  },
  "keywords": [
    "languages",
    "localization",
    "react",
    "translate"
  ],
  "author": "Matthew Downs",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/matthewdowns/react-translate/issues"
  },
  "homepage": "https://github.com/matthewdowns/react-translate#readme",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.8",
    "jest": "^26.4.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.5",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
